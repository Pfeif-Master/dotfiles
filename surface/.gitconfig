[push]
	default = simple

[alias]
	st = status
	ll = log --stat --abbrev-commit
	p = log --graph --oneline --decorate --all
	ci = commit
	ca = commit --amend
	cam = commit -a -m
	cm = commit -m
	br = branch
	co = checkout
	df = diff
	lola = log --all --graph --decorate --pretty=oneline --abbrev-commit
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
[user]
	name = Hunter_Pfeiffer
	email = hpfeiffer@dcscorp.com
[core]
	autocrlf = input

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "diff"]
	meta = yellow reverse
	frag = magenta bold
	old = red bold
	new = cyan bold
	whitespace = blue reverse

[color "status"]
	added = yellow
	changed = cyan bold
	untracked = cyan reverse
	branch = red

[core]
	editor = vim

[merge]
	defaultToUpstream = true

[diff]
	submodule = log
